extends base.pug

block title 
      title Contact
block style_files 
      style
          include ../frontend_files/pug_style.css
          include ../frontend_files/contact_style.css

block content     
     div#container  
        form(action="/contact" , method="post")
            input(type="text" name="name" placeholder="Enter your name") 
            input(type="text" name="email_id" placeholder="Enter your e-mail id")
            input(type="number" name="Phone_number" placeholder="Enter your Phone number")
            input(type="text" name="favfood" placeholder="favourite food name")
            input(type="text" name="address" placeholder="Enter your address")
            input(type="submit", value="Login" id="submit_btn")

block scripts_files 
      script
         include ../frontend_files/PUG_frontend.js        
        
