              div#lower_sec
                input(type="text", name="Building", placeholder="Building")
                input(type="number", name="Items_number", placeholder="Number of items")
                input(type="text", name="land_mark", placeholder="Land mark")
              div#order_btn
                input(type="submit", value="Order"  id="submit_btn")
